g1 = graph(xtitle="t [s]",ytitle="V [volts]"
width=400, height=200)
fc = gcurve(color=color,blue)
fa = gcurve(color=color,red)

R = 100
C = 0.001
t = 0
dt = 0.01
vb = 0
Q = 3*C

 while t <1.5:
    dQ = (vb - Q/C)*dt/R
    Q = Q + dQ
    Vc = Vb*(1 - exp(-t/(R*C)))
    fc.plot(t,Vc)
    #fa.plot(t,va)
    
